<div class="container">
	<div class="row">
		<!-- ユーザプロフィール -->
		<div class="col-sm-5 col-md-2 profile-image">
			<%= attachment_image_tag @user, :profile_image, size: "200x200", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image_square.jpg" %>
		</div>
		<div class="col-md-9 col-md-offset-1">
		<%if @user.nickname == nil %>
			<h2 class="profile"><%= @user.name %></h2>
		<% else %>
			<h2 class="profile"><%= @user.nickname %></h2>
		<% end %>
		</div>

		<div class="col-md-2 col-md-offset-1">	
			<h4><%= @user.status %></h4>
		</div>
		<!-- ユーザプロフィール -->

		<!-- マイページ用リンク -->
		<% if @user == current_user %>
			<div class="col-md-5">
				<div class="col-md-12 user-link">			
					<%= link_to "登録情報を編集する", edit_user_path(current_user) %>
				</div>

				<div class="col-md-12 bookmark-link">			
					<%= link_to "お気に入り", bookmarks_path %>
				</div>

				<div class="link">
					<% if @user.status == "有料会員" %>
						<%= link_to "作品を投稿する", new_picture_path, class: "btn btn-primary", style: "margin-right: 10px;" %>
						<% if @user.rooms.exists? %>
							<% @user.rooms.each do |room| %>
								<%= link_to "講師とチャットする", room_path(room), class: "btn btn-warning", style: "margin-right: 10px;" %>
							<% end %>
						<% end %>

					<% elsif @user.status == "講師" %>
						<%= link_to "作品を投稿する", new_picture_path, class: "btn btn-primary", style: "margin-right: 10px;" %>
						<%= link_to "My受講生", rooms_path, class: "btn btn-warning", style: "margin-right: 10px;" %>
					<% end %>
				</div>
			</div>
		<% end %>
		<!-- マイページ用リンク -->

		<!-- 講師専用リンク -->
		<% unless @user == current_user || ['講師'].include?(@user.status) || ['有料会員','無料会員'].include?(current_user.status)%>
			<div class="col-md-5">
				<div class="user-link">
					<%= link_to "登録情報を編集する", edit_user_path(@user) %>
				</div>
		<% end %>

		<% unless @user == current_user || ['無料会員'].include?(@user.status) || ['有料会員','無料会員'].include?(current_user.status)%>
				<% if @isRoom == true %>
		  			<%= link_to "チャットする", room_path(@roomId), class: "btn btn-primary" %>
		  		<% else %>
		   			<%= form_for @room do |f| %>
		      			<%= fields_for @entry do |e| %>
		        			<%= e.hidden_field :user_id, value: @user.id %>
		     			<% end %>
		      			<%= f.submit "この人とチャットを始める", class:"btn btn-primary"%>
		    		<% end %>
		  		<% end %>
		    </div>
		<% end %>
		<!-- 講師専用リンク -->
	</div>
</div>

<div class="container">
	<!-- @userの投稿イラスト一覧 -->
	<% if @user.pictures.where(status: "イラスト").exists? %>
		<h2 class="picture-title">イラスト</h2>
	
		<div class="picture-image">
			<%  @illustration_pictures.each do |picture| %>
				<div class="picture-space">
					<%= link_to picture_path(picture), style: "line-height: 40px;" do %>
						<%= attachment_image_tag picture.picture_images[0], :image, size: "170x170", format: 'jpeg', fallback: "no_image_square.jpg", style: "border-radius: 10px;" %><br>
						<%= picture.title %>
					<% end %>
				</div>
			<% end %>
		</div>
	<% end %>

	<% if @user.pictures.where(status: "イラスト").count > 5 %>
		<div class="pull-right">
			<%= link_to "もっと見る", controller: "pictures", action: "illustrations", user_id: @user.id %>
		</div>
	<% end %>
	<!-- @userの投稿イラスト一覧 -->

	<!-- @userの投稿マンガ一覧 -->
	<% if @user.pictures.where(status: "マンガ").exists? %>
		<h2 class="picture-title">マンガ</h2>

		<div class="picture-image">
			<% @comic_pictures.each do |picture| %>
				<div class="picture-space">
					<%= link_to picture_path(picture), style: "line-height: 40px;" do %>
						<%= attachment_image_tag picture.picture_images[0], :image, size: "170x170", format: 'jpeg', fallback: "no_image_square.jpg", style: "border-radius: 10px;" %><br>
						<%= picture.title %>
					<% end %>
				</div>
			<% end %>
		</div>
	<% end %>

	<% if @user.pictures.where(status: "マンガ").count > 5 %>
		<div class="pull-right">
			<%= link_to "もっと見る", controller: "pictures", action: "comics", user_id: @user.id %>
		</div>
	<% end %>
	<!-- @userの投稿マンガ一覧 -->

	<!-- 無料会員用オススメ一覧 -->
	<% if current_user.status == "無料会員" %>
		<h2 class="picture-title">おすすめ作品</h2>

		<div class="picture-image">
			<% @pictures.each do |picture| %>
				<div class="picture-space">
					<%= link_to picture_path(picture), style: "line-height: 40px;" do %>
						<%= attachment_image_tag picture.picture_images[0], :image, size: "170x170", format: 'jpeg', fallback: "no_image_square.jpg", style: "border-radius: 10px;" %><br>
						<%= picture.title %>
					<% end %>
				</div>
			<% end %>
		</div>

		<div class="pull-right">
			<%= link_to "もっと見る", pictures_path %>
		</div>
		<!-- 無料会員用オススメ一覧 -->
	<% end %>
</div>