<div class="container">
	<div class="row">
		<div class="col-md-2 profile-image">
			<%= attachment_image_tag @user, :profile_image, size: "200x200", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image_square.jpg" %>
		</div>

		<div class="col-md-2 col-md-offset-1 profile">
			<%if @user.nickname == nil %>
				<h1><%= @user.name %></h1>
			<% else %>
				<h1><%= @user.nickname %></h1>
			<% end %>

			<h4><%= @user.status %></h4>
		</div>

		<% if @user.id == current_user.id %>
			<div class="col-md-5">
				<div class="col-md-12 edit-link">			
					<%= link_to "登録情報を編集する", edit_user_path(current_user) %>
				</div>
				<div class="col-md-12 bookmark-link">			
					<%= link_to "お気に入り", bookmarks_path %>
				</div>
				<div class="link">
					<% if @user.status == "有料会員" && @user == current_user %>
						<%= link_to "作品を投稿する", new_picture_path, class: "btn btn-primary", style: "margin-right: 10px;" %>
						<% if @user.rooms.exists? %>
							<% @user.rooms.each do |room| %>
								<%= link_to "講師とチャットする", room_path(room), class: "btn btn-warning", style: "margin-right: 10px;" %>
							<% end %>
						<% end %>
					<% elsif @user.status == "講師" && @user == current_user %>
						<%= link_to "作品を投稿する", new_picture_path, class: "btn btn-primary", style: "margin-right: 10px;" %>
						<%= link_to "My受講生", rooms_path, class: "btn btn-warning", style: "margin-right: 10px;" %>
					<% end %>
				</div>
			</div>
		<% end %>

		<% unless @user == current_user || ['講師'].include?(@user.status) %>
			<div class="col-md-5 chat-link">
				<% if @isRoom == true %>
		  			<%= link_to "チャットする", room_path(@roomId), class: "btn btn-primary" %>
		  		<% else %>
		   			<%= form_for @room do |f| %>
		      			<%= fields_for @entry do |e| %>
		        			<%= e.hidden_field :user_id, value: @user.id %>
		     			<% end %>
		      			<%= f.submit "この生徒とチャットを始める", class:"btn btn-primary"%>
		    		<% end %>
		  		<% end %>
		    </div>
		<% end %>
	</div>
</div>

<div class="container">
	<% if ['管理者','有料会員'].include?(@user.status) %>
		<% if @user.pictures.where(status: "イラスト").exists? %>
			<h1 class="picture-title">イラスト</h1>
		<% end %>
		<div class="picture-image">
			<%  @illustration_pictures.each do |picture| %>
				<div class="image">
					<%= link_to picture_path(picture)do %>
						<%= attachment_image_tag picture.picture_images[0], :image, size: "180x180", format: 'jpeg', fallback: "no_image_square.jpg" %>
						<%= picture.title %>
					<% end %>
				</div>
			<% end %>
		</div>

		<% if @user.pictures.where(status: "イラスト").count > 5 %>
			<div class="pull-right">
				<%= link_to "もっと見る", controller: "pictures", action: "illustrations", user_id: @user.id %>
			</div>
		<% end %>

		<% if @user.pictures.where(status: "マンガ").exists? %>
			<h1 class="picture-title">マンガ</h1>
		<% end %>

		<div class="picture-image">
			<% @comic_pictures.each do |picture| %>
				<div class="image">
					<%= link_to picture_path(picture)do %>
						<%= attachment_image_tag picture.picture_images[0], :image, size: "180x180", format: 'jpeg', fallback: "no_image_square.jpg" %>
						<%= picture.title %>
					<% end %>
				</div>
			<% end %>
		</div>

		<% if @user.pictures.where(status: "マンガ").count > 5 %>
			<div class="pull-right">
				<%= link_to "もっと見る", controller: "pictures", action: "comics", user_id: @user.id %>
			</div>
		<% end %>
	<% end %>
</div>