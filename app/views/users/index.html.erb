<div class="container">
	<div class="row">
		<div class="col-sm-offset-2 signin-title">
			<h2>会員一覧</h2>
		</div>
		<div class="col-sm-6 col-sm-offset-3">
			<table class="table">
				<thead>
					<tr class="active">
						<th>会員ステータス</th>
						<th>氏名</th>
						<th>有効/退会</th>
						<th>支払い</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= user.status %></td>
							<td><%= link_to user.name, user_path(user) %></td>
							<td>
  								<% unless user.is_deleted %>
  									<p>有効</p>
  								<% else %>
  									<p>退会済み</p>	
  								<% end %>
							</td>
							<td><%= link_to "支払い情報へ", user_payments_path(user) %></td>
						</tr>
					<% end %>	
				</tbody>
			</table>
			<div class="col-xs-12 center">
				<%= paginate @users %>
			</div>
		</div>
	</div>
</div>



	
