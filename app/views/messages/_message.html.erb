<% messages.each do |message| %>
  <% if message.user.id == current_user.id %>
    <div class="col-xs-9 col-xs-offset-3 col-md-5 col-md-offset-7 message mymessage">
      <div class="col-xs-10">
        <b><%= simple_format(message.message) %></b> <br>
        <%= message.created_at.strftime("%Y-%m-%d %H:%M")%>
      </div>
    </div>
  <% else %>
    <div class="col-xs-12">
      <div class="col-xs-9 col-md-5 message other-message">
        <div class="col-xs-3 col-md-2">
          <%= attachment_image_tag message.user, :profile_image, size: "50x50", format: 'jpeg', class: "img-circle pull-left", fallback: "no_image_square.jpg" %>
        </div>
        <div class="col-xs-9 col-md-10">
          <b><%= simple_format(message.message) %></b> <br>
          <%= message.created_at.strftime("%Y-%m-%d %H:%M")%>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
<div class="col-xs-12 fixed-space"></div>