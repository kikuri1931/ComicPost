<div class="container">
  <div class="row">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-md-8 col-md-offset-4">
        <div  class="col-md-6 form-space">
          <label>メールアドレス</label><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="col-md-8 col-md-offset-4">
        <div  class="col-md-6 form-space">
          <label>パスワード</label><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>

      <div class="col-md-7 col-md-offset-5 form-space">
        <%= f.submit "ログインする", class: "btn btn-primary", style: "padding: 10px 50px;" %>
      </div>
    <% end %>

    <div class="col-md-8 col-md-offset-4 form-space">
      <%= link_to "登録がお済みでない方はこちら", new_user_registration_path %>
    </div>
  </div>
</div>
