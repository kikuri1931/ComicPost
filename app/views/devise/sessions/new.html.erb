<!-- ログイン失敗alert -->
<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>
<!-- ログイン失敗alert -->

<div class="container">
  <div class="row">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 form-background">
        <h1 class="text-center form-space">ログイン</h1>
        <div  class="form-space">
          <label>メールアドレス</label><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
  
        <div  class="form-space">
          <label>パスワード</label><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="form-space">
          <%= f.submit "ログインする", class: "btn btn-primary btn-block" %>
        </div>

    <% end %>

        <div class="form-space">
          <%= link_to "登録がお済みでない方はこちら", new_user_registration_path %>
        </div>  
      </div>
    
  </div>
</div>
