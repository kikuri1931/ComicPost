<div class="container">
  <div class="row">
    <%= form_for @inquiry, :url => inquiries_thanks_path do |f| %>
      <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 form-background">
        <h1 class="text-center form-space">お問い合わせ</h1>

        <div class="col-md-10 form-space">
          <label>名前</label><br>
          <div class="confirm">
            <%= f.hidden_field :name %>
            <%= @inquiry.name %>
          </div>
        </div>

        <div class="col-md-10 form-space">
          <label>メールアドレス</label><br>
          <div class="confirm">
            <%= f.hidden_field :email %>
            <%= @inquiry.email %>
          </div>
        </div>

        <div class="col-md-12 form-space">
          <label>お問い合わせ内容</label><br>
          <div class="confirm">
            <%= f.hidden_field :message %>
            <%= simple_format(@inquiry.message) %>
          </div>
        </div>

        <div class="col-md-12 form-space">
          <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
</div>  