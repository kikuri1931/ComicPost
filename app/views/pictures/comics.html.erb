<div class="container">
	<div class="row">
		<div>
		<h1 class="title">マンガ</h1>
		<div class="picture-image">
			<% @comic_pictures.each do |picture| %>
				<div class="image">
					<%= link_to picture_path(picture)do %>
						<%= attachment_image_tag picture.picture_images[0], :image, size: "180x180", format: 'jpeg', fallback: "no_image_square.jpg" %>
						<%= picture.title %>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>