<div class="container">
	<div class="row">
		<h1 class="signin-title index-pagetitle">マンガ</h1>
		<!-- ユーザ詳細画面で「もっと見る」を押したときの処理 -->
		<% if params[:user_id] %>
			<% if !@user.is_deleted %>
				<div class="col-md-12 picture-image">
					<%= render "picture_index", pictures: @pictures %>
				</div>
				<div class="col-xs-12 center">
					<%= paginate @pictures %>
				</div>
			<% elsif @user_deleted_admin_accsess %>
				<div class="col-md-12 picture-image">
					<%= render "userpicture_index", pictures: @pictures %>
				</div>
				<div class="col-xs-12 center">
					<%= paginate @pictures %>
				</div>
			<% end %>
		 	<!-- ユーザ詳細画面で「もっと見る」を押したときの処理 -->

		<% else %>
			<!-- ジャンル検索、コミックリンクを押したときの処理 -->
			<div class="col-md-3">
				<table class="genre-search">
					<thead>
						<tr>
							<th class="text-center">ジャンル検索</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td><%= link_to ' イラスト', illustrations_path %></td>
						</tr>
						<% @genres.each do |genre| %>
							<tr>
								<td>
									<%= link_to genre.genre, controller: "pictures", action: "comics", genre_id: genre.id %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-md-8 col-md-offset-1 picture-image">
				<%= render "recommendation_picture", pictures: @pictures %>
				<div class="col-xs-12 center">
					<%= paginate @pictures %>
				</div>
			</div>
			<!-- ジャンル検索、コミックリンクを押したときの処理 -->		 	
		<% end %>
	</div>
</div>