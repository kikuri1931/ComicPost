<div class="container">
	<div class="row">
		<h1 class="title">マンガ</h1>
		<div class="picture-image">
			<% @comic_pictures.each do |picture| %>
				<div class="image">
					<%= link_to picture_path(picture), style:"margin-bottom: 50px;" do %>
						<%= attachment_image_tag picture.picture_images[0], :image, size: "180x180", format: 'jpeg', fallback: "no_image_square.jpg" %>
						<%= picture.title %><br>
						ジャンル：<%= picture.genre.genre %><br>
						<%= attachment_image_tag picture.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image_square.jpg", class: "img-circle" %>
						<% if picture.user.nickname == nil %>
							<%= picture.user.name %>
						<% else %>
							<%= picture.user.nickname %>
						<% end %>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>