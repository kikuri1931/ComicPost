<div class="container">
	<div class="row">
		<h1 class="title">マンガ</h1>
		<table style="margin-top:50px; border: 1px solid black;">
				<thead>
						<tr>
							<th class="text-center" style="font-size: 20px; border-bottom: 1px solid black; padding: 5px;">ジャンル検索</th>
						</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td style="padding: 15px 100px 10px 5px; font-size: 18px;">
								<%= link_to genre.genre, controller: "pictures", action: "comics", genre_id: genre.id %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<div class="picture-image">
			<% @comic_pictures.each do |picture| %>
				<div class="images">
					<%= link_to picture_path(picture), style:"margin-bottom: 50px;" do %>
						<%= attachment_image_tag picture.picture_images[0], :image, size: "180x180", format: 'jpeg', fallback: "no_image_square.jpg" %>
						<%= picture.title %><br>
						ジャンル：<%= picture.genre.genre %><br>
						<%= attachment_image_tag picture.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image_square.jpg", class: "img-circle" %>
						<% if picture.user.nickname == nil %>
							<%= picture.user.name %>
						<% else %>
							<%= picture.user.nickname %>
						<% end %>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>