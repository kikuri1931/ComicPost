<div class="container">
	<div class="row">
		<h1 class="title">お気に入り</h1>
		<% if @bookmarks.exists? %>
			<div class="picture-image">
				<% @bookmarks.each do |bookmark| %>
					<div class="images">
						<%= link_to picture_path(bookmark.picture)do %>
							<%= attachment_image_tag bookmark.picture.picture_images[0], :image, size: "180x180", format: 'jpeg', fallback: "no_image_square.jpg" %>
							<%= bookmark.picture.title %><br>
							ジャンル：<%= bookmark.picture.genre.genre %><br>
							<%= attachment_image_tag bookmark.picture.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image_square.jpg", class: "img-circle" %>
							<% if bookmark.picture.user.nickname == nil %>
								<%= bookmark.picture.user.name %>
							<% else %>
								<%= bookmark.picture.user.nickname %>
							<% end %>
						<% end %>
					</div>
				<% end %>
			</div>
		<% else %>
			<div class="form-space">
				<p>お気に入りはありません</p>
			</div>
		<% end %>
	</div>
</div>