<div class="container">
	<div class="row">
		<% if params[:user_id] %>
			<!-- 作品詳細で「もっと見る」を押したときの処理 -->
			<% if @user.nickname.empty? %>
				<h1 class="signin-title"><%= @user.name %>さんのマンガ・イラスト</h1>
			<% else %>
				<h1 class="signin-title"><%= @user.nickname %>さんのマンガ・イラスト</h1>
			<% end %>

			<% if @user.is_deleted == false %>
				<div class="col-md-12 picture-image">
					<%= render "picture_index", pictures: @pictures %>
				</div>
			<% elsif @user.is_deleted == true && current_user.status == "講師" %>
				<div class="col-md-12 picture-image">
					<%= render "userpicture_index", pictures: @pictures %>
				</div>
			<% else %>
				<p class="nothing">作品はありません</p>
			<% end %>
				
			<!-- 作品詳細で「もっと見る」を押したときの処理 -->

		<% else %>
			<!-- オススメ作品、作品一覧を押したときの処理 -->
			<% if current_user.status == "講師" %>
				<h1 class="signin-title">作品一覧</h1>
			<% else %> 
				<h1 class="signin-title">おすすめ作品</h1>
			<% end %>
			<div class="col-md-3">
				<table class="genre-search">
					<thead>
						<tr>
							<th class="text-center">ジャンル検索</th>
						</tr>
					</thead>
					<tbody>
							<tr>
								<td><%= link_to ' マンガ', comics_path %></td>
							</tr>
							<tr>
								<td><%= link_to ' イラスト', illustrations_path %></td>
							</tr>
						<% @genres.each do |genre| %>
							<tr>
								<td>
									<%= link_to genre.genre, controller: "pictures", action: "index", genre_id: genre.id %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-md-9 picture-image">
				<%= render "picture_index", pictures: @pictures %>
			</div>
			<!-- オススメ作品、作品一覧を押したときの処理 -->
		<% end -%>
	</div>
</div>