<div class="container">
	<div class="row">
		<% if params[:user_id] %>
			<% if @user.nickname == nil %>
				<h1 class="signin-title"><%= @user.name %>さんのマンガ・イラスト</h1>
			<% else %>
				<h1 class="signin-title"><%= @user.nickname %>さんのマンガ・イラスト</h1>
			<% end %>
			<div class="picture-image">
				<% @pictures.each do |picture| %>
					<div class="picture-space">
						<%= link_to picture_path(picture)do %>
							<%= attachment_image_tag picture.picture_images[0], :image, size: "180x180", format: 'jpeg', fallback: "no_image_square.jpg", style: "border-radius: 10px;" %><br>
							<%= picture.title %><br>
							<%= picture.status %><br>
							ジャンル：<%= picture.genre.genre %>
						<% end %>
					</div>
				<% end %>
			</div>
		<% else %>
			<h1 class="signin-title">おすすめ作品</h1>
			<div class="picture-image">
				<% @pictures.each do |picture| %>
					<div class="picture-space">
						<%= link_to picture_path(picture)do %>
							<%= attachment_image_tag picture.picture_images[0], :image, size: "180x180", format: 'jpeg', fallback: "no_image_square.jpg", style: "border-radius: 10px;" %>
							<%= picture.title %><br>
							<%= picture.status %><br>
							ジャンル：<%= picture.genre.genre %>
						<% end %>
					</div>
				<% end %>
			</div>
		<% end -%>
	</div>
</div>