<div class="container">
	<div class="row">
		<% if @user.nickname == nil %>
			<h1 class="title"><%= @user.name %>さんのマンガ・イラスト</h1>
		<% else %>
			<h1 class="title"><%= @user.nickname %>さんのマンガ・イラスト</h1>
		<% end %>
		<div class="picture-image">
			<% @pictures.each do |picture| %>
				<div class="image">
					<%= link_to picture_path(picture)do %>
						<%= attachment_image_tag picture.picture_images[0], :image, size: "180x180", format: 'jpeg', fallback: "no_image_square.jpg" %>
						<%= picture.title %><br>
						<%= picture.status %><br>
						ジャンル：<%= picture.genre.genre %>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>