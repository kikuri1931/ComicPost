<div class="container">
	<div class="row">
		<% if params[:user_id] %>
			<% if @user.nickname == nil %>
				<h1 class="signin-title"><%= @user.name %>さんのマンガ・イラスト</h1>
			<% else %>
				<h1 class="signin-title"><%= @user.nickname %>さんのマンガ・イラスト</h1>
			<% end %>
			<div class="col-md-4">
				<table class="genre-search">
					<thead>
						<tr>
							<th class="text-center">ジャンル検索</th>
						</tr>
					</thead>
					<tbody>
						<% @genres.each do |genre| %>
							<tr>
								<td>
									<%= link_to genre.genre, controller: "pictures", action: "illustrations", genre_id: genre.id %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-md-8 picture-image">
				<% @pictures.each do |picture| %>
					<div class="picture-space">
						<%= link_to picture_path(picture)do %>
							<%= attachment_image_tag picture.picture_images[0], :image, size: "170x170", format: 'jpeg', fallback: "no_image_square.jpg", style: "border-radius: 10px;" %><br>
							<%= picture.title %><br>
							<%= picture.status %><br>
							ジャンル：<%= picture.genre.genre %>
						<% end %>
					</div>
				<% end %>
			</div>
		<% else %>
			<% if current_user.status == "講師" %>
				<h1 class="signin-title">作品一覧</h1>
			<% else %> 
				<h1 class="signin-title">おすすめ作品</h1>
			<% end %>
			<div class="col-md-4">
				<table class="genre-search">
					<thead>
						<tr>
							<th class="text-center">ジャンル検索</th>
						</tr>
					</thead>
					<tbody>
						<% @genres.each do |genre| %>
							<tr>
								<td>
									<%= link_to genre.genre, controller: "pictures", action: "illustrations", genre_id: genre.id %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-md-8 picture-image">
				<% @pictures.each do |picture| %>
					<div class="picture-space">
						<%= link_to picture_path(picture)do %>
							<%= attachment_image_tag picture.picture_images[0], :image, size: "170x170", format: 'jpeg', fallback: "no_image_square.jpg", style: "border-radius: 10px;" %><br>
							<%= picture.title %><br>
							<%= picture.status %><br>
							ジャンル：<%= picture.genre.genre %>
						<% end %>
					</div>
				<% end %>
			</div>
		<% end -%>
	</div>
</div>