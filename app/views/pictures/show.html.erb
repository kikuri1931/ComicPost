<div class="container">
	<div class="row">
		
		<div class="col-md-5 col-md-offset-2">
			<div class="picture-space">
				<% @picture_images.each do |picture_image| %>
					<%= attachment_image_tag picture_image, :image, size: "396x558", format: 'jpeg', fallback: "no_image_square.jpg" %>
				<% end %>
			</div>
		</div>

		<div class="col-md-3 col-md-offset-1">
			<div class="profile-image">
				<%= attachment_image_tag @picture.user, :profile_image, size: "150x150", format: 'jpeg', fallback: "no_image_square.jpg", class: "img-circle" %>
			</div>

			<table class="table">
				<tbody>
					<% if @picture.user.nickname == nil %>
						<tr>
							<th>名前</th>
							<th><p><%= @picture.user.name %></p></th>
						</tr>
					<% else %>
						<tr>
							<th>ニックネーム</th>
							<th><p><%= @picture.user.nickname %></p></th>
						</tr>
					<% end %>
				</tbody>
			</table>

			<h5><b>投稿作品</b></h5>
			<table class="table">
				<tbody>
					<tr>	
						<% @pictures.each do |picture| %>
							<td>
								<%= link_to picture_path(picture)do %>
									<%= attachment_image_tag picture.picture_images[0], :image, size: "80x80", format: 'jpeg', fallback: "no_image_square.jpg" %>
									<%= picture.title %>
								<% end %>
							</td>
						<% end %>
					</tr>
				</tbody>
			</table>
			<%= link_to 'もっと見る', user_path(@picture.user), class: "pull-right" %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<h2><%= @picture.title %></h2>
			<h6>
				<% if @picture.user.nickname == nil %>
					<%= @picture.user.name %>
				<% else %>
					<%= @picture.user.nickname %>
				<% end %>
			</h6>
			<p><%= @picture.introduction %></p>
		</div>
	</div>
</div>
