<% pictures.each do |picture| %>
	<div class="index-space">
		<%= link_to picture_path(picture), style:"margin-bottom: 50px;" do %>
			<%= attachment_image_tag picture.picture_images[0], :image, size: "170x170", format: "jpeg", fallback: "no_image_square.jpg", style: "border-radius: 10px;" %>
			<div class="index-nowrap">
				<span class="index-title"><%= picture.title %></span>
			</div>
		<% end %>
			
		<%= link_to user_path(picture.user)do %>
			<div class="index-image">
				<%= attachment_image_tag picture.user, :profile_image, size: "50x50", format: "jpeg", fallback: "no_image_square.jpg", class: "img-circle" %>
			</div>
			<div class="index-nowrap">
				<% if picture.user.nickname.blank? %>
					<span class="index-title"><%= picture.user.name %></span>
				<% else %>
					<span class="index-title"><%= picture.user.nickname %></span>
				<% end %>
			</div>
		<% end %>		
	</div>
<% end %>
