<div class="container">
	<div class="row">
		<h1 class="signin-title">イラスト</h1>
		<div class="col-md-4">
			<table class="genre-search">
				<thead>
					<tr>
						<th class="text-center">ジャンル検索</th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td>
								<%= link_to genre.genre, controller: "pictures", action: "illustrations", genre_id: genre.id %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-md-8 picture-image">
			<% @illustration_pictures.each do |picture| %>
				<div class="picture-space">
					<%= link_to picture_path(picture), style:"margin-bottom: 50px;" do %>
						<%= attachment_image_tag picture.picture_images[0], :image, size: "170x170", format: 'jpeg', fallback: "no_image_square.jpg", style: "border-radius: 10px;" %><br>
						<%= picture.title %><br>
						ジャンル：<%= picture.genre.genre %><br>
						<%= attachment_image_tag picture.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image_square.jpg", class: "img-circle" %>
						<% if picture.user.nickname == nil %>
							<%= picture.user.name %>
						<% else %>
							<%= picture.user.nickname %>
						<% end %>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>