<div class="container">
	<div class="row">
		<h1 class="signin-title index-pagetitle">イラスト</h1>
		<% if params[:user_id] %>
			<!-- ユーザ詳細画面で「もっと見る」を押したときの処理 -->
			<% if @user.is_deleted == false %>
				<div class="col-md-12 picture-image">
					<%= render "picture_index", pictures: @pictures %>
				</div>
				<div class="col-xs-12 center">
					<%= paginate @pictures %>
				</div>
			<% elsif @user.is_deleted == true && current_user.status == "講師" %>
				<div class="col-md-12 picture-image">
					<%= render "userpicture_index", pictures: @pictures %>
				</div>
				<div class="col-xs-12 center">
					<%= paginate @pictures %>
				</div>
			<% else %>
				<p class="nothing">作品はありません</p>
			<% end %>
		 	<!-- ユーザ詳細画面で「もっと見る」を押したときの処理 -->

		<% else %>
			<!-- ジャンル検索、illustrationリンクを押したときの処理 -->
			<div class="col-md-3">
				<table class="genre-search">
					<thead>
						<tr>
							<th class="text-center">ジャンル検索</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td><%= link_to ' マンガ', comics_path %></td>
						</tr>
						<% @genres.each do |genre| %>
							<tr>
								<td>
									<%= link_to genre.genre, controller: "pictures", action: "illustrations", genre_id: genre.id %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-md-9 picture-image">
				<%= render "picture_index", pictures: @pictures %>
				<div class="col-xs-12 center">
					<%= paginate @pictures %>
				</div>
			</div>
			<!-- ジャンル検索、illustrationリンクを押したときの処理 -->
		<% end %>
	</div>
</div>